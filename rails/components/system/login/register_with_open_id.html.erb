<div class="form-container">
<% form_remote_tag(
   :update => { :success => page.dom_id,
                :failure => page.dom_id("form") },
   :url    => system_accounts_path) do -%>
  <div id="<%= page.dom_id('form') %>"></div>
<% end %>
</div>

<script type="text/javascript">
$(document).ready(function(){
  Page.getDom('form').load(<%= new_system_account_path(:type => :open_id).to_json %>)
});
</script>
