 <div class="content">
   <div class="form-container">
     <form>
     <%= lazy_load_block system_roles_path, :id => page.dom_id("role_list")%>
     <div>
       <%= button_to_function "Save Defaults", "UpdateDefaults()",
          :class => "submit",
          :id => page.dom_id("save_defaults")%>

     </div>
     </form>
   </div>
</div>
<script type="text/javascript">
UpdateDefaults = function(){
  var disables = jQuery("#<%= page.dom_id("role_list") %> .default input:checked").serializeArray() || {};
  <%= disable_submit_button(page.dom_id("save_defaults")) %>;
  jQuery.post(<%= defaults_system_roles_path.to_json %>, disables, function(){
     <%= enable_submit_button(page.dom_id("save_defaults")) %>;
  });
}
</script>
