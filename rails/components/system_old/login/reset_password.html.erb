<div class="content">
  <div id="<%= page.dom_id("errors") %>" class="error" style="display:none"></div>
  <div class="form-container">
    <% form_remote_tag(:url      => formatted_reset_password_system_accounts_path(:format => "json"),
                       :loading  => disable_submit_button(page.dom_id("reset_password_submit")),
                       :complete => enable_submit_button(page.dom_id("reset_password_submit")),
                       :success  => "PasswordUser.onResetPasswordSuccess(request)",
                       :failure  => "PasswordUser.onResetPasswordFailure(request)",
                       :method => :post ) do -%>
    <fieldset>
      <legend>Reset Password</legend>
      <div>
        <label style="width: 100px">Login Name</label>
        <%= text_field 'account', 'login_name', :size => 16, :class => "textfield" %>
      </div>
      <div>
        <label style="width: 100px">Email</label>
        <%= text_field 'account', 'email', :size => 32, :class => "textfield" %>
      </div>
      <div style="margin-left: 120px">
        <%= submit_tag "Reset",
            :id => page.dom_id("reset_password_submit"),
        :class => "submit"
        %>
      </div>
    </fieldset>
    <% end %>
  </div>
  <div class="success" style="display:none">
    <p>
      The confirmation mail has been delivered to your email address.
      You can reset your password to click the link in the confirmation mail.
    </p>
  </div>
</div>
<script type="text/javascript">
jQuery(document).ready(function(){
   Page.getDom("reset_password_submit").attr("disabled", null);
});
</script>
