<%= message_from_flash_now :info %>
<table>
  <thead>
    <tr><th>Default</th><th>Roles</th></tr>
  </thead>
  <tbody>
    <% WjRole.order_by_name.each do |role| %>
    <tr>
      <th><%= check_box_tag "defaults[]", role.id, role.is_default? %></th>
      <td><%=h role.name %></td>
    </tr>
    <% end %>
  </tbody>
</table>
